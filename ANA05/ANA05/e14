import numpy as np

# Crear una matriz de 2x4
matriz = np.array([[1, 2, 3, 4],
                   [5, 6, 7, 8]])

# Sustituir la fila 0 por los nuevos valores
nuevos_valores = np.array([10, 20, 30, 40])
matriz[0, :] = nuevos_valores

# Mostrar la matriz modificada en pantalla
print("Matriz con la fila 0 modificada:")
print(matriz)
